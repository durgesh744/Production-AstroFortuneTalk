<!-- activity_notification_full_screen.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Simulated incoming call information -->
    <TextView
        android:id="@+id/text_caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/text_caller_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123-456-7890"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/text_caller_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Accept button -->
        <Button
            android:id="@+id/button_accept_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"/>

        <!-- Decline button -->
        <Button
            android:id="@+id/button_decline_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textSize="18sp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:background="#FF0000"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
